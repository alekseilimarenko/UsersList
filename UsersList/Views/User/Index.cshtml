@model IEnumerable<UsersList.Models.User>
@{
    ViewBag.Title = "Users List";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserEmail)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.SkypeLogin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Signature)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserAvatar)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.ActionLink(item.UserName, "Add", "User", new { userId = item.UserId}, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.SkypeLogin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Signature)
            </td>
            <td>
                @if (item.UserAvatar == null)
                {
                    @:None
                }
                else
                {
                    <img width="150" height="150" src="@Url.Action("GetImage", "User", new {item.UserId})"/>
                }
            </td>
        </tr>
    }
</table>